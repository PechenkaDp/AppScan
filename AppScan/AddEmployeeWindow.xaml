<Window x:Class="AppScan.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить сотрудника" Height="600" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Фамилия:" Margin="0,5"/>
            <TextBox x:Name="LastNameTextBox" Margin="0,5"/>

            <TextBlock Text="Имя:" Margin="0,5"/>
            <TextBox x:Name="FirstNameTextBox" Margin="0,5"/>

            <TextBlock Text="Отчество:" Margin="0,5"/>
            <TextBox x:Name="MiddleNameTextBox" Margin="0,5"/>

            <TextBlock Text="Табельный номер:" Margin="0,5"/>
            <TextBox x:Name="TabNumberTextBox" Margin="0,5"/>

            <TextBlock Text="Должность:" Margin="0,5"/>
            <TextBox x:Name="PositionTextBox" Margin="0,5"/>

            <TextBlock Text="Отдел:" Margin="0,5"/>
            <TextBox x:Name="DepartmentTextBox" Margin="0,5"/>

            <TextBlock Text="Телефон:" Margin="0,5"/>
            <TextBox x:Name="PhoneTextBox" Margin="0,5"/>

            <TextBlock Text="Email:" Margin="0,5"/>
            <TextBox x:Name="EmailTextBox" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Сохранить" Click="SaveButton_Click" Width="100" Margin="0,0,10,0"/>
                <Button Content="Отмена" Click="CancelButton_Click" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>