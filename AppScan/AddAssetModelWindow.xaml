<Window x:Class="AppScan.AddAssetModelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить модель актива" Height="450" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Название:" Margin="0,5"/>
            <TextBox x:Name="NameTextBox" Margin="0,5"/>

            <TextBlock Text="Производитель:" Margin="0,5"/>
            <ComboBox x:Name="ManufacturerComboBox" Margin="0,5"/>

            <TextBlock Text="Тип актива:" Margin="0,5"/>
            <ComboBox x:Name="AssetTypeComboBox" Margin="0,5"/>

            <TextBlock Text="Штрих-код:" Margin="0,5"/>
            <TextBox x:Name="BarcodeTextBox" Margin="0,5"/>

            <TextBlock Text="Спецификация:" Margin="0,5"/>
            <TextBox x:Name="SpecificationsTextBox" Height="100" 
                     TextWrapping="Wrap" AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Сохранить" Click="SaveButton_Click" Width="100" Margin="0,0,10,0"/>
                <Button Content="Отмена" Click="CancelButton_Click" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>