<Window x:Class="AppScan.EditRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать помещение" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Номер помещения:" Margin="0,5"/>
            <TextBox x:Name="RoomNumberTextBox" Margin="0,5"/>

            <TextBlock Text="Этаж:" Margin="0,5"/>
            <TextBox x:Name="FloorTextBox" Margin="0,5"/>

            <TextBlock Text="Здание:" Margin="0,5"/>
            <ComboBox x:Name="BuildingComboBox" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Сохранить" Click="SaveButton_Click" Width="100" Margin="0,0,10,0"/>
                <Button Content="Отмена" Click="CancelButton_Click" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>